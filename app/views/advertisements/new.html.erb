<h1>Pay for new advertisements</h1>

<div class="row">
    <div class="col-md-4">
        <p>Guidelines for posts</p>
        <ul>
            <li>Sponser our site!</li>
            <li>Pay your bill!!</li>
        </ul>
    </div>
    <div class="col-md-8">
        <%= form_for @advertisements do |f| %>
        <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: 'form-control', placeholder: "Enter Slogan" %>
            
        </div>
        <div class="form-group">
            <%= f.label :copy %>
            <%= f.text_area :copy, rows: 8, class: 'form-control', placeholder: 'Sell it here!' %>
            
        </div>
        <div class="form-group">
            <p>Monthly charge </p>
            <%= f.label :price %><%= f.text_field :price, class: "form-control", placeholder: "Offer per month"%>
        </div>
        <div class="form-group">
            <%= f.submit "Save", class: 'btn btn-success' %>
        </div>
        <% end %>
    </div>
    
</div>